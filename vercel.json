{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/draft/.*", "dest": "/public/draft.html" },
    { "src": "/draft", "dest": "/public/draft.html" },
    { "src": "/post/.*", "dest": "/public/post.html" },
    { "src": "/(.*\\.(html|css|js|svg|png|jpg|ico|woff2?))", "dest": "/public/$1" },
    { "src": "/", "dest": "/public/index.html" }
  ]
}
